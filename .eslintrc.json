{
    "extends": [
        "@rocketseat/eslint-config/node"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "tabWidth": 2,
                "singleQuote": false,
                "trailingComma": "all",
                "arrowParens": "always",
                "semi": false
            }
        ]
    }
}